<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="at.ac.tuwien.cg.cgmd.bifth2010">
    <application android:icon="@drawable/l00_icon" android:label="@string/l00_nameofthegame_full">
        <activity android:name=".framework.EntryPoint"
                  android:label="@string/l00_nameofthegame_full">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".framework.MenuActivity"
                  android:label="@string/l00_nameofthegame_full" android:screenOrientation="portrait">
        </activity>
        
        <activity android:name=".framework.CreditsActivity"
                  android:label="@string/l00_nameofthegame_full">
        </activity>
        
        <activity android:name=".framework.HelpActivity"
                  android:label="@string/l00_nameofthegame_full">
        </activity>
       
        <activity android:name=".level00.HelpActivity"
                  android:label="@string/l00_nameofthegame_full">
                <intent-filter>
                	<action android:name="at.ac.tuwien.cg.cgmd.bifth2010.level00.LAUNCH_HELP" />
                	<category android:name="android.intent.category.DEFAULT" />
            	</intent-filter>
                  
        </activity>
        
        <activity android:name=".level00.TestLevelActivity"
                  android:label="@string/l00_nameofthegame_full">
                  
                <intent-filter>
                	<action android:name="at.ac.tuwien.cg.cgmd.bifth2010.level00.LAUNCH_LEVEL" />
                	<category android:name="android.intent.category.DEFAULT" />
            	</intent-filter>
        </activity>
        
        <activity android:name=".framework.AboutActivity"
                  android:label="@string/l00_nameofthegame_full" android:screenOrientation="sensor" android:configChanges="keyboard|keyboardHidden|orientation">
        </activity>
        
        <activity android:name=".framework.MapActivity"
                  android:label="@string/l00_nameofthegame_full" android:screenOrientation="landscape" android:configChanges="keyboard|keyboardHidden|orientation">
        </activity>
        
    <activity android:name=".level00.GlTestActivity"></activity>
    
</application>
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>
<supports-screens
          android:largeScreens="true"
          android:normalScreens="true"
          android:smallScreens="false"
          android:anyDensity="true" />

</manifest> 