<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
	
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@drawable/l00_menuebackground">
		
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<!--Title-->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textStyle="bold"
				android:paddingLeft="@dimen/l30_HelpActivity_TitlePaddingLeft"
				android:paddingTop="@dimen/l30_HelpActivity_TitlePaddingTop"
				android:paddingRight="@dimen/l30_HelpActivity_TitlePaddingRight"
				android:paddingBottom="@dimen/l30_HelpActivity_TitlePaddingBottom"
				android:textSize="@dimen/l30_HelpActivity_TitleSize"
				android:text="@string/l30_HelpActivity_Title"
				android:textColor="@color/l30_HelpActivityTextColor"/>
			
			<!--Paragraph 1-->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/l30_HelpActivity_TextPaddingLeft"
				android:paddingTop="@dimen/l30_HelpActivity_TextPaddingTop"
				android:paddingRight="@dimen/l30_HelpActivity_TextPaddingRight"
				android:paddingBottom="@dimen/l30_HelpActivity_TextPaddingBottom"
				android:textSize="@dimen/l30_HelpActivity_TextSize"
				android:text="@string/l30_HelpActivity_Text1"
				android:textColor="@color/l30_HelpActivityTextColor"/>
			
			<ImageView   
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/l30_HelpActivity_TextPaddingLeft"
				android:paddingTop="@dimen/l30_HelpActivity_TextPaddingTop"
				android:paddingRight="@dimen/l30_HelpActivity_TextPaddingRight"
				android:paddingBottom="@dimen/l30_HelpActivity_TextPaddingBottom"
			    android:src="@drawable/l30_help"/>
  			
			<!--Paragraph 2-->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/l30_HelpActivity_TextPaddingLeft"
				android:paddingTop="@dimen/l30_HelpActivity_TextPaddingTop"
				android:paddingRight="@dimen/l30_HelpActivity_TextPaddingRight"
				android:paddingBottom="@dimen/l30_HelpActivity_TextPaddingBottom"
				android:textSize="@dimen/l30_HelpActivity_TextSize"
				android:text="@string/l30_HelpActivity_Text2"
				android:textColor="@color/l30_HelpActivityTextColor"/>

			<ImageView   
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/l30_HelpActivity_TextPaddingLeft"
				android:paddingTop="@dimen/l30_HelpActivity_TextPaddingTop"
				android:paddingRight="@dimen/l30_HelpActivity_TextPaddingRight"
				android:paddingBottom="@dimen/l30_HelpActivity_TextPaddingBottom"
			    android:src="@drawable/l30_help2"/>
  			
			<!--Paragraph 2-->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/l30_HelpActivity_TextPaddingLeft"
				android:paddingTop="@dimen/l30_HelpActivity_TextPaddingTop"
				android:paddingRight="@dimen/l30_HelpActivity_TextPaddingRight"
				android:paddingBottom="@dimen/l30_HelpActivity_TextPaddingBottom"
				android:textSize="@dimen/l30_HelpActivity_TextSize"
				android:text="@string/l30_HelpActivity_Text3"
				android:textColor="@color/l30_HelpActivityTextColor"/>

		</LinearLayout>
	</ScrollView>
</LinearLayout>
