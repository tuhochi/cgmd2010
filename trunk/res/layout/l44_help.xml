<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent">

	<ScrollView android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:background="@drawable/l00_menuebackground">
		<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="4pt"><LinearLayout android:layout_height="wrap_content"
			android:orientation="vertical" android:layout_width="fill_parent" android:background="@drawable/l44_black_70" android:padding="5pt">
			<TextView android:id="@+id/TextView01"
				android:layout_height="wrap_content" android:text="@string/l44_GameName"
				android:gravity="center" android:layout_width="fill_parent"
				android:textColor="#fff" android:textStyle="bold" android:textSize="12pt" android:paddingBottom="3pt"></TextView>
			<TextView android:id="@+id/TextView02" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/l44_GameSummary" android:paddingBottom="1pt" android:textColor="#fff"></TextView><ImageView android:id="@+id/ImageView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/l44_draft" android:layout_gravity="center" android:padding="3pt"></ImageView><TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/l44_GameDetail" android:textColor="#fff"></TextView>
		


</LinearLayout></LinearLayout>
	
</ScrollView>
</LinearLayout>
