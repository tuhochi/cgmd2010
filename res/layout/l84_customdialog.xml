<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/l84_dialogroot"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="10dp"
              >
    <ImageView android:id="@+id/l84_dialogimage"
               android:layout_marginRight="10dp"
               android:layout_height="60dp" android:layout_width="60dp"/>
    <TextView android:id="@+id/l84_dialogtext"
              android:layout_width="250dp"
              android:textColor="#FFF"
              android:layout_height="60dp"/>
	<Button android:text=">"
	 		android:id="@+id/l84_dialogbutton"
	  		android:layout_height="50dp" android:gravity="center_vertical|center_horizontal" android:layout_width="60dp">
	   </Button>
</LinearLayout>
