<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 android:id="@+id/l84_FrameLayout01"
 xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent" android:layout_width="fill_parent">
<android.opengl.GLSurfaceView
 android:id="@+id/l84_openglview" 
 android:layout_width="fill_parent" 
 android:layout_height="fill_parent"/>

<TableLayout
 android:id="@+id/l84_TableLayout" 
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content" android:layout_marginTop="3pt" android:layout_marginLeft="3pt">
<TextView android:layout_above="@+id/l84_openglview" android:text="Points" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/l84_Points"></TextView>
<ImageButton
	android:text="01"
 	android:id="@+id/l84_GemButton01"
  	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:nextFocusUp="@+id/l84_GemButton04" android:background="@drawable/l84_gem_round" android:layout_marginTop="5pt">
</ImageButton>
<ImageButton
	android:text="02"
 	android:id="@+id/l84_GemButton02"
  	android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="@drawable/l84_gem_diamond" android:layout_marginTop="5pt">
</ImageButton>
<ImageButton
	android:text="03"
 	android:id="@+id/l84_GemButton03"
  	android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="@drawable/l84_gem_rect" android:layout_marginTop="5pt">
</ImageButton>
<ImageButton
	android:text="04"
 	android:id="@+id/l84_GemButton04"
  	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:nextFocusDown="@+id/l84_GemButton01" android:background="@drawable/l84_gem_oct" android:layout_marginTop="5pt">
</ImageButton>
<TextView android:layout_above="@+id/l84_openglview" android:text="fps" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/l84_TfFps" android:layout_marginTop="3pt"></TextView>
</TableLayout>
<TableLayout
 android:id="@+id/l84_TableLayoutRight" 
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content" android:layout_marginTop="95pt" android:layout_marginLeft="88pt">
<SeekBar android:id="@+id/l84_accelbar" android:layout_below="@+id/l84_openglview" android:layout_height="wrap_content" android:layout_width="wrap_content" android:scrollbarAlwaysDrawHorizontalTrack="true" android:minWidth="100pt"></SeekBar>
</TableLayout>

</RelativeLayout>
