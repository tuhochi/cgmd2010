<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="horizontal">
	<ScrollView android:layout_height="fill_parent" android:layout_width="fill_parent" 
		android:background="@drawable/l11_street_bg">
		<LinearLayout android:layout_height="wrap_content" android:orientation="vertical" 
			android:layout_width="fill_parent" android:paddingLeft="5dip">
			<TextView android:id="@+id/TextView01" android:layout_height="wrap_content" 
				android:text="@string/l11_title" android:gravity="center" android:layout_width="fill_parent" 
				android:textSize="30dip" android:textColor="#000000">
			</TextView>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
				android:text="@string/l11_help_01" android:textColor="#000000">
			</TextView>
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:background="@drawable/l11_icon"
					android:layout_gravity="center_horizontal" android:fadingEdge="horizontal"
					android:fadingEdgeLength="5pt"></ImageView>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
				android:text="@string/l11_help_02" android:textColor="#000000" android:paddingTop="10dip">
			</TextView>
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:background="@drawable/l11_treasure"
					android:layout_gravity="center_horizontal" android:fadingEdge="horizontal"
					android:fadingEdgeLength="5pt"></ImageView>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
