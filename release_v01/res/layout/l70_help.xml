<TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="@dimen/l70_HelpActivity_TextPaddingLeft" android:paddingRight="@dimen/l70_HelpActivity_TextPaddingRight" android:paddingTop="@dimen/l70_HelpActivity_TextPaddingTop">
