<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical">
  	
	<ScrollView 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:background="@drawable/l00_menuebackground">
		
			<LinearLayout  
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:orientation="vertical">
				
					<TextView 
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:textStyle="bold"
						android:paddingLeft="@dimen/l60_HelpActivity_NoPadding"
						android:paddingTop="@dimen/l60_HelpActivity_TitlePadding"
						android:paddingRight="@dimen/l60_HelpActivity_NoPadding"
						android:paddingBottom="@dimen/l60_HelpActivity_NoPadding"
						android:textSize="@dimen/l60_HelpActivity_TitleSize"
						android:text="@string/l60_HelpActivity_Title"
						android:textColor="@color/l60_HelpActivity_TitleColor"/>
						
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textStyle="normal"
						android:paddingLeft="@dimen/l60_HelpActivity_TextPadding"
						android:paddingTop="@dimen/l60_HelpActivity_TextPadding"
						android:paddingRight="@dimen/l60_HelpActivity_TextPadding"
						android:paddingBottom="@dimen/l60_HelpActivity_NoPadding"
						android:textSize="@dimen/l60_HelpActivity_TextSize"
						android:text="@string/l60_HelpActivity_Part1"
						android:textColor="@color/l60_HelpActivity_TextColor"/>
			
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textStyle="normal"
						android:paddingLeft="@dimen/l60_HelpActivity_TextPadding"
						android:paddingTop="@dimen/l60_HelpActivity_TextPadding"
						android:paddingRight="@dimen/l60_HelpActivity_TextPadding"
						android:paddingBottom="@dimen/l60_HelpActivity_NoPadding"
						android:textSize="@dimen/l60_HelpActivity_TextSize"
						android:text="@string/l60_HelpActivity_Part2"
						android:textColor="@color/l60_HelpActivity_TextColor"/>
						
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textStyle="normal"
						android:paddingLeft="@dimen/l60_HelpActivity_TextPadding"
						android:paddingTop="@dimen/l60_HelpActivity_TextPadding"
						android:paddingRight="@dimen/l60_HelpActivity_TextPadding"
						android:paddingBottom="@dimen/l60_HelpActivity_NoPadding"
						android:textSize="@dimen/l60_HelpActivity_TextSize"
						android:text="@string/l60_HelpActivity_Part3"
						android:textColor="@color/l60_HelpActivity_TextColor"/>
						
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:textStyle="bold"
						android:paddingLeft="@dimen/l60_HelpActivity_NoPadding"
						android:paddingTop="@dimen/l60_HelpActivity_TextPadding"
						android:paddingRight="@dimen/l60_HelpActivity_TextPadding"
						android:paddingBottom="@dimen/l60_HelpActivity_NoPadding"
						android:textSize="@dimen/l60_HelpActivity_TextSize"
						android:text="@string/l60_HelpActivity_Part4"
						android:textColor="@color/l60_HelpActivity_TextColor"/>
				
			</LinearLayout>
	</ScrollView>
</LinearLayout>
